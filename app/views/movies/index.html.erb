<div class="row">
  <h1 class="col-sm-10">Movies</h1>
  <div class="col-sm-2">
    <%= link_to 'Add Movie', new_movie_path, class: "btn btn-success" %>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Year</th>
      <th scope="col">Genre</th>
      <th scope="col">IMDB Link</th>
      <th scope="col" colspan="2">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <th scope="row"><%= movie.id %></th>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%= link_to movie.imdb, movie.imdb, target: '_blank' %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Remove', movie_path(movie), :method => :delete, data: {:confirm => "Do you really want to remove \"#{movie.title}\"?" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @movies %>
</div>